@model IEnumerable<Cozastore.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Categorias</h1>

<p>
    <a asp-action="Create" class="btn btn-primary my-3 ">
        adicionar
        <i class="bi bi-plus"></i>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
               Filtro
            </th>
            <th>
                Banner
            </th>
            <th>
                Categoria
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Foto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Filtrar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Banner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaMae.Nome)
            </td>
            <td >
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square px-md-2 text-warning"></i></a> |
                <a asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-card-text px-md-2"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash text-danger px-md-2"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
